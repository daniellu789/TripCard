<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.levart.TripCard.TripCardDetailActivity$PlaceholderFragment"
    >

     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:id="@+id/cards_tool_bar"
                 android:paddingBottom="3dp">

                 <LinearLayout
                     android:id="@+id/praise"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_weight="1">

                     <ImageButton
                         android:id="@+id/like_button"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/small_heart" />

                     <TextView
                         android:id="@+id/like_number"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:gravity="center_vertical"
                         android:text="0" />

                 </LinearLayout>



                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:orientation="horizontal">

                     <ImageButton
                         android:id="@+id/watch_button"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:src="@drawable/heart_normal"
                         android:layout_weight="1"
                         />

                     <ImageButton
                         android:id="@+id/save_button"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:src="@drawable/favorite"
                         android:layout_weight="1" />

                     <ImageButton
                         android:id="@+id/share_button"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:src="@drawable/share_normal"
                         android:layout_weight="1"/>

                 </LinearLayout>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 android:paddingTop="4dp">

                 <com.parse.ParseImageView
                     android:id = "@+id/picture"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:padding="10dp"
                     android:scaleType="centerCrop"/>

                 <TextView
                     android:id="@+id/card_description"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:textSize="16dp"
                     android:padding="20dp"
                     />

             </LinearLayout>


         </LinearLayout>

    </ScrollView>

</FrameLayout>
